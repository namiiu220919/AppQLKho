<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Nhập tên đăn nhập"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Nhập mật khẩu"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edtNumberPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Nhập số điện thoại"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edtPosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Nhập Chức vụ"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edtProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Nhập Giới thiệu"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edtCreatedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Ngày tạo"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:gravity="center">
        <Button
            android:id="@+id/btnSaveTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#CACCAC"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="22dp" />
        <Button
            android:id="@+id/btnCancelTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#CACCAC"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="22dp" />
    </LinearLayout>
</LinearLayout>

